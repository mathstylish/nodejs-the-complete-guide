<header class="header">
    <nav class="header__nav">
        <div class="header__menu-container">
            <div class="header__logo">
                <img style="height: 48px; width: 48px;" src="/img/logo.svg" alt="Logo NodeShop">
            </div>
            <input type="checkbox" class="header__menu--toggle" id="check">
            <div class="header__backdrop"></div>
            <ul class="header__menu">
                <li class="header__menu-item">
                    <a href="/" class="<%= path === '/' && 'active' %>">Shop</a>
                </li>
                <li class="header__menu-item">
                    <a href="/products" class="<%= path === '/products' && 'active' %>">Products</a>
                </li>
                <li class="header__menu-item">
                    <a href="/cart" class="<%= path === '/cart' && 'active' %>">Cart</a>
                </li>
                <li class="header__menu-item">
                    <a href="/admin/add-product" class="<%= path === '/admin/add-product' && 'active' %>">Add Product</a>
                </li>
                <li class="header__menu-item">
                    <a href="/admin/products" class="<%= path === '/admin/products' && 'active' %>">Admin Products</a>
                </li>
                <label for="check" class="header__menu--close">
                    <img style="height: 32px; width: 32px;" src="/img/close.svg" aria-hidden="true">
                </label>
            </ul>
            <label for="check" class="header__menu--open">
                <img style="height: 32px; width: 32px;" src="/img/open.svg" aria-hidden="true">
            </label>
        </div>
    </nav>
</header>