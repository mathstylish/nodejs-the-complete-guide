<%- include('../includes/head', { styles: styles  })%>

<%- include('../includes/navigation', { path: path })%>

<main class="main">
    <% if (products.length > 0) { %>
    <h1 class="main__title">Shop</h1>
    <div class="main__card-list">
        <% products.forEach(product => { %>
            <article class="main__card-item">
                <div class="main__card-image">
                    <img src="/img/fake-products/<%= product.imageUrl %>.jpg" alt="image placeholder">
                </div>
                <div class="main__card-content">
                    <p class="main__card-title"><%= product.title %></p>
                    <p class="main__card-description"><%= product.description %></p>
                    <p class="main__card-price">R$ <%= product.price %></p>
                    <div class="main__card-actions">
                        <%- include('../includes/add-to-cart.ejs', { product: product }) %>
                    </div>
                </div>
            </article>
        <% }) %>
    </div>
    <% } else { %>
    <h1 class="general-message">No Products</h1>
    <% } %>
</main>

<%- include('../includes/end') %>