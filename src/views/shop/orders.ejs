<%- include('../includes/head', { styles: styles })%>

<%- include('../includes/navigation', { linkPath: path })%>

<main class="container">
    <% if (orders.length > 0) { %>
    <div class="orders">
        <% orders.forEach(order => { %>
            <section class="orders__item">
                <p>Order NÂº <%= order._id %></p>
                <% order.items.forEach(item => { %>
                    <div class="orders__image">
                        <img src="/img/fake-products/<%=item.imageUrl%>.jpg" alt="<%=item.title%>">
                    </div>
                    <div class="orders__details">
                        <h3 class="orders__title"><%=item.title%></h3>
                        <p class="orders__price">R$ <%=item.price%></p>
                        <p class="orders__qty">qty: <%=item.quantity%></p>
                        <p class="orders__subtotal">R$ <%=item.subTotal%></p>
                    </div>
                <% }) %>
            </section>
        <% }) %>
    </div>
    <% } else { %>
        <h1 class="general-message">No orders</h1>
    <% } %>
</main>

<%- include('../includes/end') %>